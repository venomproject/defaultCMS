<com:TContent ID="content">

<section class="title-section">
<h1>Produkty</h1>
</section>
 
 
 <div class="title-box clearfix "> 
<h2 class="title-box_primary">


<button class="btn btn-small btn-primary" data-toggle="portfilter" data-target="all">
					Wszystkie
				</button>
 
<com:TRepeater ID="Category" AllowPaging="false">
					<prop:ItemTemplate>
 		
<button class="btn btn-small btn-primary" data-toggle="portfilter" data-target="<%= $this->Data->PageID %>">
					<%= $this->Data->Name %>
				</button>			
					</prop:ItemTemplate>
</com:TRepeater>
</h2>
</div>

<com:TRepeater ID="Sites" AllowPaging="true" PageSize="16" >
					<prop:ItemTemplate>

<div class="row " style="margin-bottom: 30px !important;"> 

<div class="col-xs-12 col-md-6 col-sm-3">
<img src="/UserFiles/Pages/<%=$this->Data->MasterPhoto == 'nophoto.png' ? $this->Data->MasterPhoto : $this->Data->ID.'/thumb/'.$this->Data->MasterPhoto->Name  %>" alt="<%= $this->Data->Name %>"  class="img-responsive" />
</div>
<div class="col-xs-12 col-md-6 col-sm-9">
      <div class="caption">
     	 <small><%= $this->Data->TitleDate %></small>
        <h2><%= $this->Data->Name %></h2>
        <%= $this->Data->ShortDescription %>
        <a href="<%=$this->Service->constructUrl('Pages', array('id' => $this->Data->ID)) %>" class="pull-right btn btn-primary btn-normal btn-inline" role="button"><%[TXT_WIECEJ]%></a>
      </div>
</div>
</div>
			
			
					</prop:ItemTemplate>
				</com:TRepeater>	
				
	
					
<div class="col-sm-12">
	<com:TPager ID="Pager"
    ControlToPaginate="Sites"
    PageButtonCount="4"
    Mode="Numeric"
	ButtonType="LinkButton" 
    OnPageIndexChanged="pageChanged"
    />
	</div>				


	<script src="<%= $this->Page->Theme->BaseUrl %>/js/bootstrap-portfilter.min.js"	type="text/javascript"></script>							
</com:TContent>